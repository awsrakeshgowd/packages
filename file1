pipeline {
    agent any
    environment {
        DEPLOY_NAME = "time-tracker-#${currentBuild.number}"
    }
    stages {
        stage('Git Checkout') {
            steps {
                git url: 'https://github.com/awsrakeshgowd/time-tracker.git'
            }
        }
        stage('Maven Build') {
            steps {
                sh 'mvn clean package'
            }
        }
    }
    post {
        success {
            echo 'Build was successful!'
        }
        failure {
            echo 'Build failed.'
        }
    }
}
