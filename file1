pipeline {
    agent any
    environment {
        DEPLOY_NAME = "mypacker-${currentBuild.number}"
    }
    stages {
        stage('Welcome') {
            steps {
                echo 'Welcome to Jenkins Declarative Pipeline'
                script {
                    // Set the displayName of the current build
                    currentBuild.displayName = DEPLOY_NAME
                }
            }
        }
        
        stage('Checkout SCM') {
            steps {
                // Checkout the Git repository
                git url: 'https://github.com/awsrakeshgowd/Maven_Jenkins.git'
            }
        }

        stage('Maven Build') {
            steps {
                // Run the Maven build
                sh 'mvn clean package'
            }
        }
        
        stage('Post Build Actions') {
            steps {
                echo 'Build completed successfully!'
                // Any additional steps post build (like archiving artifacts, etc.)
            }
        }
    }

    post {
        success {
            echo 'Build was successful!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
